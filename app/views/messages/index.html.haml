.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-name
        test
      = link_to "new", class: "chat-side__user--new-group" do
        = fa_icon 'pencil-square-o'
      =link_to "edit", class: "chat-side__user--edit-user" do
        = fa_icon 'cog'
  .chat-side__groups
    = render "groups"
.chat-main
  .chat-main__header
    .chat-main__header--group.clearfix
      .chat-main__header--group-name
        group name
      = link_to "Edit", "edit", class: "chat-main__header--group-edit-btn"
    .chat-main__header-members
      MEMBER:
      %i member
  .chat-main__body
    = render "message"
  .chat-main__footer
    %form{class: "chat-main__footer-form"}
      .chat-main__footer-body
        %input{placeholder: "type a message", class: "message", type: "text", name: "message_body", id: "message_body"}
        %label{class: "chat-file", for: "message_image"}
          %input{class: "image", type: "file", name: "message_image", id: "message_image"}
          = fa_icon 'image'
      %input{type: "submit", name: "commit", value: "Send", class: "submit"}
